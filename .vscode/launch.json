{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch index.js via nodemon",
            "type": "node",
            "request": "launch",
            // "runtimeExecutable": "~/.nvm/versions/node/v10.13.0/bin/npm",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "debug"],
            "program": "${workspaceFolder}/index.js",
            "restart": true,
            "port": 9229,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Attach to Docker",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "127.0.0.1",
            "restart": true,
            "sourceMaps": false,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/usr/app",
            "protocol": "inspector"
        }
    ]
}